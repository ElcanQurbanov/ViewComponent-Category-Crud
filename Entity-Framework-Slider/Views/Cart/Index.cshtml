@model List<BasketDetailVM>

@{
    ViewData["Title"] = "Index";
    decimal grantTotal = 0;
}

<div class="container my-5">
    <h2 class="my-3">Products</h2>
    

    @if (Model.Count > 0)
    {
       
        <table class="table basket-table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">Name</th>
                    @*<th scope="col">Description</th>*@
                    <th scope="col">Price</th>
                    <th scope="col">Count</th>
                    <th scope="col">Total</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img style="width:100px;height:100px;" src="~/img/@item.Image" /></td>
                        <td>@item.CategoryName</td>
                        <td>@item.Name</td>
                        @*<td>@item.Description</td>*@
                        <td>@item.Price ₼</td>
                        <td>@item.Count</td>
                        <td>@item.Total ₼</td>
                        <td>
                           <form method="post">
                               <i class="fa-solid fa-trash delete-icon"  data-id="@item.Id" style="color: #ff0000; cursor:pointer;"></i>
                               </form></td>
                    </tr>

                    grantTotal += item.Total;
                }
                
            </tbody>
        </table>
    <h3 class="my-4 text-right">Grand total: @grantTotal₼</h3>
      

    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Products not yet added
        </div>
    }


     



</div>

